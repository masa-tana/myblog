<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BLOG</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <!-- header -->
  <%- include('header.ejs') %>
  <body>
    <main>
      <ul class="list">
        <% articles.forEach((article) => { %>
          <li>
            <% if (article.category === 'limited') { %>
              <i>会員限定</i>
            <% } %>
            <h2><%= article.title %></h2>
            <p><%= article.summary %></p>
            <a href="/article/<%= article.id %>">続きを読む</a>
            <div class="list-menu">
              <% if (locals.isLoggedIn) { %>
                <form action="/delete/<%= article.id %>" method="post">
                  <input type="submit" value="削除">
                </form>
                <a href="/edit/<%= article.id %>">編集</a>
              <% } %>  
          </div>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
